body.error {
  background: url("/images/fail/the-chaps.jpg") no-repeat scroll center 5em transparent;
  background-color: #E6E6E6;
}

body.error .content {
  min-height: 1em;
  position: relative;
  text-align: center;
  text-shadow: 0 1px 0 #FFF;
  top: 26em;
  width: auto;
}

body.error section h1 {
  font-size: 1.65em;
  line-height: 1.5;
  text-align: center;
}

body.error #footer {
  background: url("/images/fail/rule.jpg") repeat-x scroll center top transparent;
  background-color: inherit;
  border: none;
  clear: both;
  margin-top: 2em;
  padding: 1em 0;
  position: relative;
  text-align: center;
  top: 25em;
  width: 100%;
}

body.error #footer .subsection {
  color: #6D6D6D;
  float: none;
  text-align: center;
  margin: 0 auto;
}

body.error .copyright {
  background: url("/images/fail/coat-of-arms.jpg") no-repeat scroll center top transparent;
  padding-top: 4.5em;
}